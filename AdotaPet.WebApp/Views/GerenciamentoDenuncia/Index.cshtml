@model IEnumerable<AdotaPet.WebApp.Models.Entities.GerenciamentoDenuncia>

@{
    ViewBag.Title = "Listagem de denúncias";
}

<h2>Listagem de denúncias</h2>

<p>
    @Html.ActionLink("Cadastrar denúncia", "Create", "Create", new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Denuncia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Denunciante)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Denuncia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Denunciante)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" })
            @Html.ActionLink("Deletar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>

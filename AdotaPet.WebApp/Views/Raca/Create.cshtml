<script>
    window.onload = function () {
        $.ajax({
            type: "POST",
            url: "\obterCodigo",
           // data: "{Codigo: '" + $("#txtCodigo").val() + "'}",
           // data: "{cep: 88620}",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (resposta) {
                $("#Codigo").val(resposta);
                $("#Codigo").prop('disabled', true);
            },
            error: function () {
                alert("deu merda");
            }
        })

    }
    </script>
